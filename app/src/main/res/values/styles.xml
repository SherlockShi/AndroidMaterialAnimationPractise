<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageBig">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="ImageMedium">
        <item name="android:layout_width">84dp</item>
        <!--<item name="android:layout_margin">2dp</item>-->
        <item name="android:layout_height">84dp</item>
    </style>

    <style name="ImageMedium.Scaled" parent="ImageMedium">
        <item name="android:alpha">0</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="ImageSmall">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="RedButton">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GreenButton">
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BlueButton">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OrangeTheme" parent="AppTheme">
        <item name="colorPrimary">@color/theme_yellow_primary</item>
        <item name="colorPrimaryDark">@color/theme_yellow_primary</item>
        <item name="android:textColorPrimary">@color/theme_yellow_text</item>
        <item name="android:windowBackground">@color/theme_yellow_background</item>
        <item name="colorAccent">@color/theme_yellow_accent</item>
    </style>
</resources>
