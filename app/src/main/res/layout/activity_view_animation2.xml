<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flyt_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Scene One"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/GreenButton"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:onClick="goSceneOne"/>

            <Button
                android:text="Scene Two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/GreenButton"
                android:layout_marginLeft="10dp"
                android:id="@+id/button"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:onClick="goSceneTwo" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <Button
                android:text="Scene Three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/GreenButton"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:onClick="goSceneThree" />

            <Button
                android:text="Scene Four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/GreenButton"
                android:layout_marginLeft="10dp"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:onClick="goSceneFour" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>